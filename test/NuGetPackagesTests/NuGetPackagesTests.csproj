<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup Condition=" '$(OS)' == 'Windows_NT' ">
    <DefineConstants>$(DefineConstants);_WINDOWS</DefineConstants>
  </PropertyGroup>

  <PropertyGroup>
    <DefineConstants>$(DefineConstants);NUGET_PACKAGE_TESTS</DefineConstants>
    <AnalysisLevel>latest-All</AnalysisLevel>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="..\IntegrationTests\Helpers\Compatibility\StringBuilderExtensions.cs" />
    <Compile Include="..\IntegrationTests\Helpers\CollectorRequestHelper.cs" />
    <Compile Include="..\IntegrationTests\Helpers\CollectorResponseHelper.cs" />
    <Compile Include="..\IntegrationTests\Helpers\EnvironmentHelper.cs" />
    <Compile Include="..\IntegrationTests\Helpers\EnvironmentTools.cs" />
    <Compile Include="..\IntegrationTests\Helpers\InstrumentedProcessHelper.cs" />
    <Compile Include="..\IntegrationTests\Helpers\MockSpansCollector.cs" />
    <Compile Include="..\IntegrationTests\Helpers\OtlpResourceExpector.cs" />
    <Compile Include="..\IntegrationTests\Helpers\OutputHelper.cs" />
    <Compile Include="..\IntegrationTests\Helpers\PathHandler.cs" />
    <Compile Include="..\IntegrationTests\Helpers\ProcessHelper.cs" />
    <Compile Include="..\IntegrationTests\Helpers\TcpPortProvider.cs" />
    <Compile Include="..\IntegrationTests\Helpers\TestAppStartupMode.cs" />
    <Compile Include="..\IntegrationTests\Helpers\TestHelper.cs" />
    <Compile Include="..\IntegrationTests\Helpers\TestHttpServer.AspNetCore.cs" />
    <Compile Include="..\IntegrationTests\Helpers\TestHttpServer.NetFramework.cs" />
    <Compile Include="..\IntegrationTests\Helpers\TestSettings.cs" />
    <Compile Include="..\IntegrationTests\Helpers\TestTimeout.cs" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="xunit.runner.json" CopyToOutputDirectory="PreserveNewest" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\src\OpenTelemetry.AutoInstrumentation\OpenTelemetry.AutoInstrumentation.csproj" />
  </ItemGroup>

  <ItemGroup>
    <!-- GrpcServices is 'none' so that we do not need to depend on the grpc nuget package, and we only need protobuf support. -->
    <Protobuf Include="..\IntegrationTests\opentelemetry\**\*.proto" ProtoRoot="..\IntegrationTests\" GrpcServices="none" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="System.EnterpriseServices" Condition="$(TargetFramework.StartsWith('net4'))" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Google.Protobuf" />
    <PackageReference Include="Grpc.Tools" PrivateAssets="all" />
    <PackageReference Include="Microsoft.Build" />
    <PackageReference Include="Microsoft.Data.SqlClient" />
    <PackageReference Include="Newtonsoft.Json" />
    <PackageReference Include="NuGet.Versioning" />
    <PackageReference Include="System.Collections.Immutable" />
    <PackageReference Include="Testcontainers" />
    <PackageReference Include="Verify.Xunit" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\..\src\OpenTelemetry.AutoInstrumentation.BuildTasks\OpenTelemetry.AutoInstrumentation.BuildTasks.targets">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>


</Project>
