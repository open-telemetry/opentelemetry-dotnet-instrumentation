<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

  <!-- Define variables for file paths -->
  <variable name="logDirectory" value="${basedir}/logs"/>

  <!-- Define targets -->
  <targets>
    <!-- File target for logging to a file -->
    <target xsi:type="File" 
            name="fileTarget"
            fileName="${logDirectory}/nlog-demo-${shortdate}.log"
            layout="${longdate} ${uppercase:${level}} ${logger} ${message} ${exception:format=tostring}" />

    <!-- Console target for logging to console -->
    <target xsi:type="Console" 
            name="consoleTarget"
            layout="${time} [${uppercase:${level}}] ${logger}: ${message} ${exception:format=shortType}" />

    <!-- ColoredConsole target for better console output -->
    <target xsi:type="ColoredConsole" 
            name="coloredConsoleTarget"
            layout="${time} [${uppercase:${level}}] ${logger}: ${message} ${exception:format=shortType}">
      <highlight-row condition="level == LogLevel.Debug" foregroundColor="Gray" />
      <highlight-row condition="level == LogLevel.Info" foregroundColor="White" />
      <highlight-row condition="level == LogLevel.Warn" foregroundColor="Yellow" />
      <highlight-row condition="level == LogLevel.Error" foregroundColor="Red" />
      <highlight-row condition="level == LogLevel.Fatal" foregroundColor="Red" backgroundColor="White" />
    </target>
  </targets>

  <!-- Define rules -->
  <rules>
    <!-- Log all messages to file -->
    <logger name="*" minlevel="Trace" writeTo="fileTarget" />
    
    <!-- Log Info and above to console -->
    <logger name="*" minlevel="Info" writeTo="coloredConsoleTarget" />
    
    <!-- Suppress Microsoft logs to reduce noise in console -->
    <logger name="Microsoft.*" maxlevel="Warn" final="true" />
    <logger name="System.*" maxlevel="Warn" final="true" />
  </rules>

</nlog> 