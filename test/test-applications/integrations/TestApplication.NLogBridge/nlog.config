<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <targets>
    <!-- Console target for local debugging with trace context -->
    <target xsi:type="Console" name="console"
            layout="${longdate} [${threadid}] ${uppercase:${level}}  ${logger} - ${message} ${exception:format=tostring} TraceId=${event-properties:TraceId} SpanId=${event-properties:SpanId} TraceFlags=${event-properties:TraceFlags}" />
  </targets>

  <rules>
    <!-- Enable ALL log levels including Trace and Debug -->
    <logger name="*" minlevel="Trace" writeTo="console" />
  </rules>
</nlog>
