<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net7.0;net6.0</TargetFrameworks>
    <TargetFrameworks Condition=" '$(IsCentos)' == '' ">net8.0;$(TargetFrameworks)</TargetFrameworks>
    <TargetFrameworks Condition="'$(OS)' == 'Windows_NT'">$(TargetFrameworks);net472</TargetFrameworks>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Oracle.ManagedDataAccess" Condition="'$(TargetFramework)' == 'net472'" VersionOverride="$(LibraryVersion)" />
    <PackageReference Include="Oracle.ManagedDataAccess.Core" Condition="'$(TargetFramework)' != 'net472'" VersionOverride="$(LibraryVersion)"  />
  </ItemGroup>
  
</Project>
