    <PackageReference Include="System.Memory" VersionOverride="4.6.3"/>
    <PackageReference Include="System.ValueTuple" VersionOverride="4.6.1"/>
  </ItemGroup>

  <ItemGroup>
    <None Update="Configurations\FileBased\Files\NoCodeFile.yaml">
